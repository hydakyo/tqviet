{
  "Kiosk": {
    "FullScreen": true,
    "TopMost": true,
    "DisableKeys": true,
    "ExitShortcut": "Ctrl+Shift+Q"        // phím tắt thoát app
  },
  "DslrBooth": {
    "Mode": "Keyboard",                   // "Keyboard" = dùng SendKeys, có thể mở rộng "HttpApi"
    "ProcessName": "dslrBooth",
    "OutputFolder": "C:/Users/Public/Pictures/dslrBooth/",
    "WebhookUrl": "http://localhost:7071/dslrbooth/photo-saved",
    "KeyboardSequence": [ "{F4}" ],
    "Shots": 4,
    "IntervalMs": 1500
  },
  "Pricing": {
    "PricePerPrint": 20000,
    "Bundles": [
      { "Count": 1, "Price": 20000 },
      { "Count": 2, "Price": 35000 },
      { "Count": 4, "Price": 60000 }
    ]
  },
  "Payment": {
    "DefaultProvider": "Demo",            // Demo / Cash / Qr / Pos
    "DefaultAmount": 0
  },
  "WebhookServer": {
    "Enabled": true,
    "Prefix": "http://localhost:7071/"
  }
}
