<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ===================== -->
  <!--       PALETTE         -->
  <!-- ===================== -->
  <Color x:Key="Color.Surface">#0B0F1A</Color>
  <Color x:Key="Color.Card">#121826</Color>
  <Color x:Key="Color.Primary">#1F6FEB</Color>
  <Color x:Key="Color.Primary.Darker">#184FAD</Color>
  <Color x:Key="Color.Accent">#2EA043</Color>
  <Color x:Key="Color.Text">#FFFFFF</Color>
  <Color x:Key="Color.Text.Muted">#BFC7D5</Color>
  <Color x:Key="Color.Separator">#263041</Color>

  <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}" />
  <SolidColorBrush x:Key="Brush.Card" Color="{StaticResource Color.Card}" />
  <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary}" />
  <SolidColorBrush x:Key="Brush.Primary.Darker" Color="{StaticResource Color.Primary.Darker}" />
  <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}" />
  <SolidColorBrush x:Key="Brush.Text" Color="{StaticResource Color.Text}" />
  <SolidColorBrush x:Key="Brush.Text.Muted" Color="{StaticResource Color.Text.Muted}" />
  <SolidColorBrush x:Key="Brush.Separator" Color="{StaticResource Color.Separator}" />

  <!-- ===================== -->
  <!--      TYPOGRAPHY       -->
  <!-- ===================== -->
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource Brush.Text}" />
    <Setter Property="TextWrapping" Value="Wrap" />
  </Style>

  <Style x:Key="H1" TargetType="TextBlock">
    <Setter Property="FontSize" Value="44" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="TextAlignment" Value="Center" />
  </Style>

  <Style x:Key="H2" TargetType="TextBlock">
    <Setter Property="FontSize" Value="30" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="TextAlignment" Value="Center" />
  </Style>

  <Style x:Key="Body" TargetType="TextBlock">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="Foreground" Value="{StaticResource Brush.Text.Muted}" />
    <Setter Property="TextAlignment" Value="Center" />
  </Style>

  <!-- ===================== -->
  <!--       EFFECTS         -->
  <!-- ===================== -->
  <DropShadowEffect x:Key="DropShadow" ShadowDepth="0" BlurRadius="26" Opacity="0.45" />

  <!-- ===================== -->
  <!--       CONTAINERS      -->
  <!-- ===================== -->
  <Style x:Key="Card" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource Brush.Card}" />
    <Setter Property="CornerRadius" Value="24" />
    <Setter Property="Padding" Value="32" />
    <Setter Property="Margin" Value="40" />
    <Setter Property="Effect" Value="{StaticResource DropShadow}" />
  </Style>

  <!-- ===================== -->
  <!--         BUTTONS       -->
  <!-- ===================== -->
  <Style x:Key="KioskButtonBase" TargetType="Button">
    <Setter Property="Foreground" Value="White" />
    <Setter Property="FontSize" Value="28" />
    <Setter Property="Padding" Value="24,14" />
    <Setter Property="Margin" Value="12" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="bd" CornerRadius="18" Background="{TemplateBinding Background}" Effect="{StaticResource DropShadow}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
              <Setter Property="RenderTransform" TargetName="bd">
                <Setter.Value>
                  <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                </Setter.Value>
              </Setter>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="KioskButton" TargetType="Button" BasedOn="{StaticResource KioskButtonBase}">
    <Setter Property="Background" Value="{StaticResource Brush.Primary}"/>
  </Style>

  <Style x:Key="KioskButtonSecondary" TargetType="Button" BasedOn="{StaticResource KioskButtonBase}">
    <Setter Property="Background" Value="#2B2F3A"/>
  </Style>

  <Style x:Key="KioskButtonAccent" TargetType="Button" BasedOn="{StaticResource KioskButtonBase}">
    <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
  </Style>

  <!-- ===================== -->
  <!--      PROGRESSBAR      -->
  <!-- ===================== -->
  <Style TargetType="ProgressBar">
    <Setter Property="Height" Value="18"/>
    <Setter Property="Foreground" Value="{StaticResource Brush.Accent}"/>
    <Setter Property="Background" Value="#1B2230"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ProgressBar">
          <Grid>
            <Border Background="{TemplateBinding Background}" CornerRadius="12"/>
            <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" CornerRadius="12" Width="0"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- ===================== -->
  <!--       SEPARATOR       -->
  <!-- ===================== -->
  <Style TargetType="Separator">
    <Setter Property="Margin" Value="0,12,0,12"/>
    <Setter Property="Background" Value="{StaticResource Brush.Separator}"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Separator">
          <Grid>
            <Rectangle Height="1" Fill="{TemplateBinding Background}" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- ===================== -->
  <!--        GRID           -->
  <!-- ===================== -->
  <Style TargetType="Grid">
    <Setter Property="Background" Value="{StaticResource Brush.Surface}"/>
  </Style>

</ResourceDictionary>
