<UserControl x:Class="PhotoBoothKiosk.App.Views.GuideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Border Style="{StaticResource Card}">
      <StackPanel Spacing="14" HorizontalAlignment="Center" VerticalAlignment="Center">

        <!-- Tiêu đề -->
        <TextBlock Style="{StaticResource H1}" Text="Hướng dẫn nhanh" />

        <!-- Danh sách bước -->
        <TextBlock Style="{StaticResource Body}"
                   Text="1) Chọn phương thức thanh toán
2) Tạo dáng khi đếm ngược
3) DSLRBooth sẽ xử lý in/gửi/QR
4) Hoàn tất và quay về màn hình chính"
                   TextAlignment="Center" />

        <!-- Nhắc sẽ tự chuyển -->
        <TextBlock Style="{StaticResource Body}"
                   Text="Đang chuyển tới màn hình thanh toán…"
                   Opacity="0.85">
          <TextBlock.Triggers>
            <EventTrigger RoutedEvent="Loaded">
              <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                  <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0.85" To="0.35" Duration="0:0:0.9"/>
                </Storyboard>
              </BeginStoryboard>
            </EventTrigger>
          </TextBlock.Triggers>
        </TextBlock>

        <!-- Nút đi ngay (nếu không muốn chờ) -->
        <Button Style="{StaticResource KioskButton}"
                Content="Tiếp tục"
                Command="{Binding ContinueCommand}"
                Width="300"
                HorizontalAlignment="Center"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
