<UserControl x:Class="PhotoBoothKiosk.App.Views.SessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Border Style="{StaticResource Card}">
      <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">

        <!-- Tiêu đề + hướng dẫn pose -->
        <TextBlock Style="{StaticResource H1}"
                   Text="Chuẩn bị tạo dáng" />
        <TextBlock Style="{StaticResource Body}"
                   Text="Hãy nhìn vào camera, chỉnh tóc/áo và mỉm cười. Khi bấm BẮT ĐẦU, hệ thống sẽ đếm ngược rồi chụp nhiều tấm liên tiếp."
                   TextAlignment="Center" />

        <!-- Thanh tiến trình đếm ngược -->
        <ProgressBar Width="720"
                     Minimum="0" Maximum="100"
                     Value="{Binding Progress}" />

        <!-- Trạng thái -->
        <TextBlock FontSize="22"
                   HorizontalAlignment="Center"
                   Text="{Binding Status}" />

        <!-- Nút điều khiển -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
          <Button Style="{StaticResource KioskButton}"
                  Content="Bắt đầu"
                  Command="{Binding StartCaptureCommand}"
                  Width="260"/>
          <Button Style="{StaticResource KioskButtonSecondary}"
                  Content="Hủy"
                  Command="{Binding CancelCommand}"
                  Width="200"/>
        </StackPanel>

      </StackPanel>
    </Border>
  </Grid>
</UserControl>
